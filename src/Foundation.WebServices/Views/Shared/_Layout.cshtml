@using Foundation.WebServices

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genesys Framework Foundation for Web API</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scriptsHead", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top genesys-nav-bar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Genesys Framework Foundation for Web API", HomeController.IndexGetAction, HomeController.ControllerName, new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(CustomerController.GetActionName, CustomerController.ControllerName, "v1", new { id = 1 }, null)</li>
                    <li><a href="http://docs.GenesysFramework.com" target="_blank">Docs</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
     </div>
    <footer>
        <hr />
        <p class="container">@(String.Format("Copyright (c) {0} {1}. All rights reserved.", DateTime.UtcNow.Year, "Genesys Source"))</p>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
