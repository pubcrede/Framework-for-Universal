@model System.Collections.Generic.IEnumerable<Framework.Entity.CustomerModel>

@using Framework.Entity

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12 genesys-spacer-all genesys-grid-header">
            <div class="col-xs-3">ID</div>
            <div class="col-xs-3">First Name</div>
            <div class="col-xs-3">Last Name</div>
            <div class="col-xs-3">Birth Date</div>
        </div>
    </div>
    foreach (CustomerModel item in Model)
    {
        <div class="row">
            <div class="col-xs-12 genesys-spacer-all">
                <div class="col-xs-3"><a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">@item.ID</a></div>
                <div class="col-xs-3"><a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">@item.FirstName</a></div>
                <div class="col-xs-3"><a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">@item.LastName</a></div>
                <div class="col-xs-3"><a href="#" onclick="window.location.href='@Url.Action(CustomerController.SummaryAction, CustomerController.ControllerName, new { id = item.ID })'">@item.BirthDate.ToShortDateString()</a></div>
            </div>
        </div>
    }
}
@if (ViewData.ModelState.IsValid == false)
{
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 genesys-spacer-all">
            @Html.ValidationSummary(false, "Action resulted in...", new { @class = "text-danger" })
        </div>
    </div>
}