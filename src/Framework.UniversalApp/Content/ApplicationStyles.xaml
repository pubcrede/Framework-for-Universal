<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- App -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#eee"/>
    <!-- Header -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="RoyalBlue"/>
    <SolidColorBrush x:Key="HeaderMouseOverBrush" Color="LightBlue"/>
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="White"/>
    <!-- Content Pane -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="DimGray"/>
    <SolidColorBrush x:Key="MenuMouseOverBrush" Color="RoyalBlue"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="White"/>
    <!-- Content Pane -->
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ContentMouseOverBrush" Color="White"/>
    <SolidColorBrush x:Key="ContentForegroundBrush" Color="SlateGray"/>
</ResourceDictionary>
